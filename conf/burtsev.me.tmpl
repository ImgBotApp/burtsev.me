server {
	listen 80;
	server_name local.burtsev.me www.local.burtsev.me;

	gzip on;
	charset utf-8;
	access_log /path/to/project/logs/access.nginx.log main;
	error_log /path/to/project/logs/error.nginx.log;
	root /path/to/project/www;

	location ~ /(about|portfolio|resume|contacts) {
		try_files $uri /index.html;
	}

	error_page  404              /404.html;
	error_page   500 502 503 504  /50x.html;
}
