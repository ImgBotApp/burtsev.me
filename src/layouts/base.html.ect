<!DOCTYPE html>
<html lang="en" class="dark">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="yandex-verification" content="450792568999f995">
	<%- @getBlock("meta").toHTML() %>
	<title><%= @getTitle() %></title>
	<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
	<link rel="stylesheet" href="/build/build.css?<%= @fingerprint %>">
	<!--[if lte IE 8]>
	<link rel="stylesheet" href="/build/build.ie.css?<%= @fingerprint %>">
	<script src="/build/build.ie.js?<%= @fingerprint %>"></script>
	<![endif]-->
</head>
<body>
	<nav class="mainmenu js-menu">
		<% for slide in @getCollection("slides").toJSON() : %>
		<a class="mainmenu__item mainmenu__item_<%= slide.key %>" href="#<%= slide.key %>"><%= slide.title %></a>
		<% end %>
	</nav>
	<header class="jumbotron">
		<h1 class="jumbotron__name"><a href="/">Alexander Burtsev</a></h1>
		<p class="jumbotron__desc">Frontend-developer &amp; traveler</p>
	</header>

	<%- @content %>

	<footer class="footer clearfix">
		<div class="footer__copyright">&copy; Alexander Burtsev</div>
		<h2 class="footer__head">
			This page powered by 
			<span class="footer__icon flaticon-list23 js-footer-icon"></span>
		</h2>
		<ul class="footer__list js-footer-list is-hidden">
			<% for flink in @poweredBy : %>
			<li class="footer__link"><a href="<%= flink[1] %>"><%= flink[0] %></a></li>
			<% end %>
		</ul>
	</footer>

	<!--[if gte IE 9]><!-->
	<script src="/build/build.js?<%= @fingerprint %>"></script>
	<!--<![endif]-->

	<!-- Yandex.Metrika counter -->
	<script type="text/javascript">
	(function (d, w, c) {
	    (w[c] = w[c] || []).push(function() {
	        try {
	            w.yaCounter28205452 = new Ya.Metrika({id:28205452,
	                    clickmap:true,
	                    trackLinks:true,
	                    accurateTrackBounce:true});
	        } catch(e) { }
	    });

	    var n = d.getElementsByTagName("script")[0],
	        s = d.createElement("script"),
	        f = function () { n.parentNode.insertBefore(s, n); };
	    s.type = "text/javascript";
	    s.async = true;
	    s.src = (d.location.protocol == "https:" ? "https:" : "http:") + "//mc.yandex.ru/metrika/watch.js";

	    if (w.opera == "[object Opera]") {
	        d.addEventListener("DOMContentLoaded", f, false);
	    } else { f(); }
	})(document, window, "yandex_metrika_callbacks");
	</script>
	<noscript><div><img src="//mc.yandex.ru/watch/28205452" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
	<!-- /Yandex.Metrika counter -->
</body>
</html>
