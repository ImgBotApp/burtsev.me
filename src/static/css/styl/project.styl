.projects
	padding: 2rem $side_padding 0
	text-align: center

.project
	display: inline-block
	position: relative
	width: 30%
	margin: 0 1.5% 1rem
	padding: 0 0 .5rem 0
	text-align: center
	vertical-align: top

	&:hover &__shutter
		height: 100%
		opacity: 1

	&__title
		font-family: $font_condensed
		font-size: 1.5rem
		line-height: 1.5rem

		&_inner
			color: #FFF

	&__image
		display: block
		width: 100%

	&__shutter
		position: absolute
		overflow: hidden
		top: 0
		left: 0
		width: 100%
		height: 0
		padding: 1.5rem
		opacity: 0
		color: #DDD
		background: #222
		font-size: .7rem
		box-sizing: border-box
		transition: all .2s ease-in-out

		&__caption
			display: block
			padding: 1rem 0
			color: #FFF
			font: 1rem $font_condensed

@media only screen and (max-width: $medium_screen)
	.project
		width: 45%
		margin: 0 2.5%
