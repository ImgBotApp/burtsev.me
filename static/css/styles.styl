// Variables
$font_path = '../static/fonts/'
$font_default = 'PT Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
$image_path = '../static/i/'

$shadow = 0 0 .1rem #000
$gray_line = 1px solid #999

$headers = { // [0] - font-size, [1] — margin-top, [2] — margin-bottom
	h1: (2rem 1rem .7rem)
	h2: (1.5rem .9rem .6rem)
	h3: (1.2rem .7rem .5rem)
}
$slides = {
	about: (#FFFDDD)
	contacts: (#FFEEEE)
	resume: (#EBFFFD)
	portfolio: (#faeeff)
}

// Fonts
@font-face
	font-family: 'Open Sans Condensed'
	src: url($font_path'opensans-condlight-webfont.eot')
	src: url($font_path'opensans-condlight-webfont.eot?#iefix') format('embedded-opentype'),
		url($font_path'opensans-condlight-webfont.woff2') format('woff2'),
		url($font_path'opensans-condlight-webfont.woff') format('woff'),
		url($font_path'opensans-condlight-webfont.ttf') format('truetype'),
		url($font_path'opensans-condlight-webfont.svg#open_sanscondensed_light') format('svg')
	font-weight: normal
	font-style: normal

// Imports
@import 'nib'
@import 'normalize'
@import 'styl/*'

// Common staff
html
	min-height: 100%
	font-size: 25px
	font-family: $font_default
	line-height: 1.8
	font-weight: 400
	color: #333
	background: #333

body
	min-width: 300px

for $hi in keys($headers)
	{$hi}
		padding: 0
		margin: $headers[$hi][1] 0 $headers[$hi][2]
		font-family: 'Open Sans Condensed', $font_default
		font-size: $headers[$hi][0]

p
	padding: 0
	margin: 0 0 .5rem

a
	color: #66A3CC

	&:hover
		color: #cc6666

.dark
	background: #333 embedurl('../i/dark_geometric.png') // Image inlining for page background

.clearfix
	clearfix()

.is-implicit
	position: absolute
	width: 0
	height: 0

@media only screen and (max-width: 800px)
	html
		font-size: 15px

@media only screen and (max-width: 450px)
	html
		font-size: 15px
