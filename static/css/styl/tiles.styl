$pages = (resume about contacts portfolio)

.tiles
	padding: 1rem 10%
	background: #FFF

	&_atop
		padding: 0

		.tile
			float: none
			display: none
			width: 100%
			padding: .5rem 10%
			margin: 0 !important
			text-align: left
			vertical-align: middle
			cursor: default

			&:hover .tile__icon
				transform: none

			&__icon
				display: inline-block
				width: 3rem
				height: 3rem
				margin: 0 .5rem 0 0
				vertical-align: middle

		for $type in $pages
			&_{$type} .tile_{$type}
				display: block

.tile
	float: left
	width: 45%
	padding: 1rem
	color: #FFF
	background: #222
	text-align: center
	text-decoration: none
	text-shadow: $shadow
	font: 2rem/1.0 'Open Sans Condensed'
	box-sizing: border-box
	box-shadow: $shadow

	&:nth-child(odd)
		margin: 1.5rem 5% 1.5rem 0

	&:nth-child(even)
		margin: 1.5rem 0 1.5rem 5%

	&:hover &__icon
		transform: scale(1.15)

	for $type in $pages
		&_{$type}
			background: url($image_path''$type'.png')

			polygon
				clip-path: url('#clip-'$type)

	&__icon
		position: relative // fixed transition for Safaru
		display: block
		width: 5rem
		height: 5rem
		margin: 0 auto .3rem auto
		box-shadow: $shadow
		background: #FFF
		border-radius: 50%
		transition: all .2s ease-in-out
