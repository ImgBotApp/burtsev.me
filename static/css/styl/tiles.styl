.tiles
	padding: 1rem 10%
	background: #FFF

.tile
	float: left
	width: 45%
	padding: 1rem
	color: #FFF
	background: #222
	text-align: center
	text-decoration: none
	text-shadow: $shadow
	font: 2rem/1.0 'Open Sans Condensed'
	box-sizing: border-box
	box-shadow: $shadow

	&:nth-child(odd)
		margin: 1.5rem 5% 1.5rem 0

	&:nth-child(even)
		margin: 1.5rem 0 1.5rem 5%

	&:hover
		box-shadow: $shadow_hover

		.tile__icon
			box-shadow: $shadow_hover

	for $type in (resume about contacts portfolio)
		&_{$type}
			background: url($image_path''$type'.png')

			polygon
				clip-path: url('#clip-'$type)

	&__icon
		display: block
		width: 5rem
		height: 5rem
		margin: 0 auto .3rem auto
		box-shadow: $shadow
		background: #FFF
		border-radius: 50%